{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["./helpers/*"],
      "@handlers/*": ["./handlers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
