{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@handlers/*": ["./handlers/*"],
      "@utils/*": ["./utils/*"],
      "@db/*": ["./db/*"],
      "@api/*": ["./api/*"],
      "@constants/*": ["./constants/*"],
      "@validations/*": ["./validations/*"],
      "@routes/*": ["./routes/*"],
      "@middleware/*": ["./middleware/*"],
      // Aliases for prisma generated files
      "@prisma-models/*": ["./generated/prisma/models/*"],
      "@prisma-internal/*": ["./generated/prisma/internal/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
